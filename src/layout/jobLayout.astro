---
import NavBar from "@/components/navbar/index.astro";
import Footer from "@/components/footer/index.astro";
import { BusinessInfo } from "@/data/business-info";
const { frontmatter } = Astro.props;
---

<!doctype html>
<html
  data-wf-domain="painting-128.webflow.io"
  data-wf-page="655b7c0c2a4a4972f4c5aef0"
  data-wf-site="65576d2f478026e86cc17ae3"
  lang="en"
>
  <head>
    <meta charset="utf-8" />
    <title>{frontmatter.position}</title>
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link href="../styles/global.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link
      href="https://fonts.gstatic.com"
      rel="preconnect"
      crossorigin="anonymous"
    />
    <script
      src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"
      type="text/javascript"></script><script type="text/javascript">
      WebFont.load({
        google: {
          families: [
            "Lato:100,100italic,300,300italic,400,400italic,700,700italic,900,900italic",
            "Playfair Display:regular,500,600,700,800,900,italic,500italic,600italic,700italic,800italic,900italic",
            "Inter:300,regular,500,600,700,800,900",
          ],
        },
      });
    </script><script type="text/javascript">
      !(function (o, c) {
        var n = c.documentElement,
          t = " w-mod-";
        (n.className += t + "js"),
          ("ontouchstart" in o ||
            (o.DocumentTouch && c instanceof DocumentTouch)) &&
            (n.className += t + "touch");
      })(window, document);
    </script>
    <link
      href="https://assets-global.website-files.com/65576d2f478026e86cc17ae3/6572db5aeb69948a923b80da_Favicon.png"
      rel="shortcut icon"
      type="image/x-icon"
    />
    <link
      href="https://assets-global.website-files.com/65576d2f478026e86cc17ae3/6572db65a9bef53b0c164ada_Webclip.png"
      rel="apple-touch-icon"
    />
    <script type="text/javascript">
      window.__WEBFLOW_CURRENCY_SETTINGS = {
        currencyCode: "USD",
        symbol: "$",
        decimal: ".",
        fractionDigits: 2,
        group: ",",
        template:
          '{{wf {"path":"symbol","type":"PlainText"} }} {{wf {"path":"amount","type":"CommercePrice"} }} {{wf {"path":"currencyCode","type":"PlainText"} }}',
        hideDecimalForWholeNumbers: false,
      };
    </script>
  </head>
  <body>
    <NavBar />
    <section class="section template-banner">
      <div class="banner-full-image">
        <div class="background-banner"></div>
        <img
          srcset="https://assets-global.website-files.com/65576d2f478026e86cc17ae3/65699b90f77c77287926c442_banner%20about-p-500.webp 500w, https://assets-global.website-files.com/65576d2f478026e86cc17ae3/65699b90f77c77287926c442_banner%20about-p-800.webp 800w, https://assets-global.website-files.com/65576d2f478026e86cc17ae3/65699b90f77c77287926c442_banner%20about-p-1080.webp 1080w, https://assets-global.website-files.com/65576d2f478026e86cc17ae3/65699b90f77c77287926c442_banner%20about-p-1600.webp 1600w, https://assets-global.website-files.com/65576d2f478026e86cc17ae3/65699b90f77c77287926c442_banner%20about.webp 2000w"
          loading="lazy"
          sizes="(max-width: 479px) 96vw, (max-width: 991px) 97vw, (max-width: 1919px) 98vw, 100vw"
          alt=""
          src="https://assets-global.website-files.com/65576d2f478026e86cc17ae3/65699b90f77c77287926c442_banner%20about.webp"
          class="image-banner template-bottom"
        />
      </div>
      <div class="inner-banner template">
        <div class="base-container w-container">
          <div class="inner-content">
            <div class="banner-title-wrapper">
              <h1
                data-w-id="b9468297-5a79-7745-08ea-a361fa428730"
                style="opacity:0"
                class="banner-title"
              >
                Brand Identity
              </h1>
            </div>
          </div>
        </div>
      </div>
    </section>
    <div class="section">
      <div class="base-container w-container">
        <div class="job-position-wrapper">
          <div
            data-w-id="aa66d7b8-b6e0-8dec-12fc-174c7216b528"
            style="opacity:0"
            class="job-position-content-wrapper"
          >
            <div class="rich-text-style w-richtext">
              <h2>Job description</h2>
              <slot />
              {
                frontmatter.responsibilities && (
                  <>
                    <h3>Job responsibilities</h3>
                    <ul role="list" class="!list-disc">
                      {frontmatter.responsibilities.map((item) => (
                        <li>{item}</li>
                      ))}
                    </ul>
                  </>
                )
              }
              {
                frontmatter.qualifications && (
                  <>
                    <h3>Qualifications</h3>
                    <ul role="list" class="!list-disc">
                      {frontmatter.qualifications.map((item) => (
                        <li>{item}</li>
                      ))}
                    </ul>
                  </>
                )
              }
              {
                frontmatter.benefits && (
                  <>
                    <h3>Other benefits</h3>
                    <ul role="list" class="!list-disc">
                      {frontmatter.benefits.map((item) => (
                        <li>{item}</li>
                      ))}
                    </ul>
                  </>
                )
              }
              <p>
                Experience the transformative power of color with the Senior
                Color Consultant Painting Solutions at &quot;{
                  BusinessInfo.companyName
                }&quot; Let our experts guide you in creating spaces that not
                only look stunning but also evoke the desired emotions and
                atmosphere. By coordinating colors with existing design elements
                and considering the overall ambiance, our consultants create
                cohesive and harmonious spaces that leave a lasting impression.
              </p>
            </div>
          </div>
          <div
            data-w-id="2fc27566-5577-d844-4560-765e127f9b48"
            style="opacity:0"
            class="job-position-sidebar-wrapper"
          >
            <div class="job-position-sidebar-wrap">
              <p class="job-position-icon"></p>
              <p class="paragraph-large">{frontmatter.jobType}</p>
            </div>
            <div class="job-position-sidebar-wrap">
              <p class="job-position-icon"></p>
              <p class="paragraph-large">{frontmatter.hours}</p>
            </div>
            <div class="job-position-sidebar-wrap last-child">
              <p class="job-position-icon"></p>
              <p class="paragraph-large">{frontmatter.location}</p>
            </div>
            <a
              data-w-id="ce5e33f2-035a-20f7-0d5a-a2f9bfb4f39e"
              href="/contact-us"
              class="dark-bubble-btn w-inline-block"
            >
              <div class="secondary-btn-text">Apply Now</div>
              <div class="button-hover-circle"></div>
            </a>
          </div>
        </div>
      </div>
    </div>
    <Footer />
    <script
      src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js?site=65576d2f478026e86cc17ae3"
      type="text/javascript"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"></script>
    <script src="../script/job.js" type="text/javascript"></script>
  </body>
</html>
