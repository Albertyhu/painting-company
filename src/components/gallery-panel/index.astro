---
import ImagePanel from "../image-panel.astro";
const {
  image1,
  altText1,
  image2,
  altText2,
  image3,
  altText3,
  image4,
  altText4,
} = Astro.props;
---

<div
  id="gallery"
  class="max-w-[1200px] mx-auto my-10 flex flex-col md:grid md:grid-cols-[55%_45%] gap-5 px-[15px]"
>
  <div
    class="flex flex-col mx-auto sm:grid sm:grid-cols-[50%_50%] gap-y-4 h-auto w-full"
  >
    <ImagePanel
      image={image1}
      altText={altText1}
      customImgStyle="lightbox-image"
    />
    <ImagePanel
      image={image2}
      altText={altText2}
      customImgStyle="lightbox-image"
    />
    <ImagePanel
      image={image3}
      altText={altText3}
      customImgStyle="lightbox-image"
    />
    <ImagePanel
      image={image4}
      altText={altText4}
      customImgStyle="lightbox-image"
    />
  </div>
  <slot />
</div>
